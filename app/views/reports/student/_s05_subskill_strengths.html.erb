<section class="report-section">
  <h2>하위 영역별 강점/약점</h2>
  <p><%= @presenter.subskill_strength_text %></p>
  <table class="report-table">
    <thead>
      <tr>
        <th>하위 영역</th>
        <th>점수</th>
        <th>그래프</th>
      </tr>
    </thead>
    <tbody>
      <% @presenter.subskill_scores.each do |subskill, score| %>
        <tr>
          <td><%= subskill %></td>
          <td><%= score %>점</td>
          <td><%= report_bar(score) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <strong>우수 영역:</strong>
    <%= @presenter.top_subskills.map { |pair| "#{pair[0]}(#{pair[1]}점)" }.join(", ") %>
  </p>
  <pre><%= JSON.pretty_generate(@presenter.subskill_synthesis || {}) %></pre>
</section>
