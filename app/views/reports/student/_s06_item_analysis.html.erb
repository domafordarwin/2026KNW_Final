<section class="report-section">
  <h2>문항별 분석</h2>
  <p><%= @presenter.item_analysis_text %></p>
  <table class="report-table">
    <thead>
      <tr>
        <th>문항</th>
        <th>질문</th>
        <th>점수</th>
        <th>정답 여부</th>
        <th>응답</th>
        <th>소요 시간</th>
      </tr>
    </thead>
    <tbody>
      <% @presenter.item_rows.each do |row| %>
        <tr>
          <td>#<%= row[:item_id] %></td>
          <td><%= row[:prompt] %></td>
          <td><%= row[:score] %>점</td>
          <td><%= row[:is_correct] ? '정답' : '오답' %></td>
          <td><%= row[:answer].to_json %></td>
          <td><%= row[:time_spent] %>초</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
