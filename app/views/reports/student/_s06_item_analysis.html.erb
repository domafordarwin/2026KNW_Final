<section class="report-section">
  <h2>S-06 Item Analysis Table</h2>
  <p><%= @presenter.item_analysis_text %></p>
  <table class="report-table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Prompt</th>
        <th>Score</th>
        <th>Correct</th>
        <th>Answer</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @presenter.item_rows.each do |row| %>
        <tr>
          <td><%= row[:item_id] %></td>
          <td><%= row[:prompt] %></td>
          <td><%= row[:score] %></td>
          <td><%= row[:is_correct] %></td>
          <td><%= row[:answer].to_json %></td>
          <td><%= row[:time_spent] %>s</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
