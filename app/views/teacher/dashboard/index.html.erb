<div class="header">
  <h2>교사 대시보드</h2>
</div>

<div class="stats-grid">
  <div class="stat-card">
    <div class="label">활성 세션</div>
    <div class="value"><%= @stats[:active_sessions] %></div>
  </div>
  <div class="stat-card">
    <div class="label">대기 중 제출물</div>
    <div class="value"><%= @stats[:pending_submissions] %></div>
  </div>
  <div class="stat-card">
    <div class="label">대기 중 피드백</div>
    <div class="value"><%= @stats[:pending_feedback] %></div>
  </div>
  <div class="stat-card">
    <div class="label">생성된 보고서</div>
    <div class="value"><%= @stats[:reports] %></div>
  </div>
</div>

<div class="card">
  <h3>최근 제출물</h3>
  <table>
    <thead>
      <tr>
        <th>학생</th>
        <th>세션</th>
        <th>제출일</th>
        <th>작업</th>
      </tr>
    </thead>
    <tbody>
      <% @recent_submissions.each do |sub| %>
        <tr>
          <td><%= sub.student&.name %></td>
          <td><%= sub.session&.assessment_version&.name %></td>
          <td><%= sub.submitted_at&.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "검토", teacher_submission_path(sub), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
