<%= form_with model: [:admin, @book], local: true do |f| %>
  <% if @book.errors.any? %>
    <div class="alert alert-error">
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "제목" %>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :author, "저자" %>
    <%= f.text_field :author %>
  </div>

  <div class="form-group">
    <%= f.label :isbn, "ISBN" %>
    <%= f.text_field :isbn, placeholder: "978-0-00-000000-0" %>
  </div>

  <div class="form-group">
    <%= f.label :grade_band, "학년군" %>
    <%= f.select :grade_band, options_for_select([["학년군 선택", ""], "K-2", "3-5", "6-8", "9-12"], @book.grade_band) %>
  </div>

  <div class="form-group">
    <%= f.label :difficulty, "난이도" %>
    <%= f.select :difficulty, options_for_select([["난이도 선택", ""], "easy", "medium", "hard"], @book.difficulty) %>
  </div>

  <div class="form-group">
    <%= f.label :tags_json, "태그 (JSON 배열)" %>
    <%= f.text_field :tags_json, placeholder: '["fiction", "adventure"]' %>
  </div>

  <div class="form-group">
    <%= f.label :active, "활성" %>
    <%= f.check_box :active %>
    <span style="font-size: 0.9rem; color: #666;">활성 도서만 추천됩니다</span>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "취소", admin_book_catalogs_path, class: "btn btn-secondary" %>
  </div>
<% end %>
