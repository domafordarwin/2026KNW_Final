<div class="admin-header">
  <h2>사용자: <%= @user.name %></h2>
  <div class="actions">
    <%= link_to "수정", edit_admin_user_path(@user), class: "btn btn-secondary" %>
    <%= link_to "목록으로", admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <table>
    <tr><th style="width: 150px;">ID</th><td><%= @user.id %></td></tr>
    <tr><th>이름</th><td><%= @user.name %></td></tr>
    <tr><th>이메일</th><td><%= @user.email_optional || "N/A" %></td></tr>
    <tr><th>역할</th><td><span class="badge badge-info"><%= @user.role %></span></td></tr>
    <tr>
      <th>상태</th>
      <td>
        <% if @user.status == "active" %>
          <span class="badge badge-success">활성</span>
        <% else %>
          <span class="badge badge-warning">비활성</span>
        <% end %>
      </td>
    </tr>
    <tr><th>생성일</th><td><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></td></tr>
    <tr><th>수정일</th><td><%= @user.updated_at.strftime("%Y-%m-%d %H:%M") %></td></tr>
  </table>
</div>
